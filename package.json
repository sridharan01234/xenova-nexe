{
  "name": "context-provider",
  "version": "1.0.0",
  "description": "A Node.js CLI application that converts workspaces into vector embeddings using Xenova/Transformers",
  "main": "src/index.js",
  "bin": {
    "context-provider": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "build": "echo '❌ Build disabled on local machine. Use GitHub Actions for deployment.'",
    "build:ci": "node build.js",
    "test": "node src/index.js --help",
    "test:local": "node test-local.js"
  },
  "keywords": [
    "cli",
    "vector-embeddings",
    "transformers",
    "workspace",
    "nexe"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.0",
    "mime-types": "^2.1.35",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nexe": "^4.0.0-rc.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nexe": {
    "target": "linux-x64-18.17.0",
    "build": true,
    "output": "dist/context-provider",
    "excludes": [
      "node_modules/@xenova/transformers/dist/models/**/*"
    ]
  }
}
